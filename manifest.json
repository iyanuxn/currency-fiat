{
  "manifest_version": 3,
  "name": "Crypto Converter",
  "version": "1.0",
  "description": "Convert crypto to fiat.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.svg",
      "48": "assets/logo.svg",
      "128": "assets/logo.svg"
    }
  },
  "icons": {
    "16": "assets/logo.svg",
    "48": "assets/logo.svg",
    "128": "assets/logo.svg"
  },
  "permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["dist/output.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.coinbase.com/*"
  ]
}
